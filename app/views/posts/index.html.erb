<div class="top_right">
<%= link_to "<button>New Post</button>".html_safe, new_post_path %>
<%= link_to "<button>Post Page</button>".html_safe, posts_path %>
<%= link_to "<button>Join Us</button>".html_safe, users_path %>
<%= link_to "<button>Home</button>".html_safe, root_path %>
</div>

<h1>Listing posts</h1>
<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Body</th>
      <th>Publish Date</th>
      <!-- <th>Draft Status</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if @posts.empty? %>
      <td class="noposts">No Posts available</td>
    <% else %>

    <% @posts.each do |post| %>
      <tr>
        <td><%= post.subject %></td>
        <td><%= post.body %></td>
        <td><%= post.published_at %></td>
        <td><%# post.draft_status %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<br>
