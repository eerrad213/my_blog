<h1>Sign Up</h1>

<div class="top_right">
<%= link_to "<button>Back</button>".html_safe, users_path %>
<%= link_to "<button>Post Page</button>".html_safe, posts_path %>
<%= link_to "<button>Home</button>".html_safe, root_path %>
</div>

<% if @user.errors.any? %>
<b>Errors:</b>
<ul>
  <%= @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @user do |f| %>
   <%= f.label :name %>
   <%= f.text_field :name %>
  <br>
   <%= f.label :email %>
   <%= f.text_field :email %>
  <br>
   <%= f.label :password %>
   <%= f.password_field :password %>
  <br>
   <%= f.label :password_confirmation, 'Confirm Password' %>
   <%= f.password_field :password_confirmation %>
  <br>
   <%= f.submit 'Submit', id: 'submit' %>
 <% end %>